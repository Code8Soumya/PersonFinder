<%- include('./layouts/head.ejs') %>
    </head>

    <body class="bg-slate-50 min-h-screen">
        <%- include('./layouts/nav.ejs') %>
            <main class="max-w-7xl mx-auto py-10 sm:px-6 lg:px-8">
                <!-- Loading Indicator -->
                <div id="loadingIndicator"
                    class="fixed inset-0 bg-gray-500 bg-opacity-75 flex items-center justify-center z-50 hidden">
                    <div class="bg-white p-6 rounded-lg shadow-xl">
                        <p class="text-xl font-semibold text-slate-700">Processing...</p>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
                    <!-- Add Person Form -->
                    <div class="bg-white p-8 rounded-xl shadow-lg border border-slate-200">
                        <h2 class="text-2xl font-bold mb-6 text-primary">Add New Person</h2>
                        <form id="addPersonForm" class="space-y-6">
                            <div>
                                <label class="block text-sm font-medium text-slate-600 mb-1.5">Name</label>
                                <input type="text" name="name" required
                                    class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-primary focus:ring-1 focus:ring-primary px-3 py-2.5 text-slate-700 placeholder-slate-400">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-600 mb-1.5">Email</label>
                                <input type="email" name="email" required
                                    class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-primary focus:ring-1 focus:ring-primary px-3 py-2.5 text-slate-700 placeholder-slate-400">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-600 mb-1.5">Gender</label>
                                <select name="gender" required
                                    class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-primary focus:ring-1 focus:ring-primary px-3 py-2.5 text-slate-700">
                                    <option value="" disabled selected>Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-600 mb-1.5">Age</label>
                                <input type="number" name="age" min="0" required
                                    class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-primary focus:ring-1 focus:ring-primary px-3 py-2.5 text-slate-700 placeholder-slate-400">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-600 mb-1.5">Photo</label>
                                <input type="file" name="photo" accept="image/*" required id="photoInput"
                                    class="mt-1 block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-primary file:text-white hover:file:bg-secondary transition-colors duration-150 cursor-pointer border border-slate-300 p-2 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                            </div>
                            <div id="photoPreviewContainer" class="hidden pt-2">
                                <img id="photoPreview" src="#" alt="Photo Preview"
                                    class="mt-2 w-36 h-36 object-cover rounded-lg border-2 border-slate-200 shadow-sm">
                            </div>
                            <button type="submit"
                                class="w-full bg-primary text-white py-3 px-6 rounded-lg hover:bg-secondary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary font-semibold text-base transition-colors duration-150">
                                Add Person
                            </button>
                        </form>
                    </div>

                    <!-- Find Person Form -->
                    <div class="bg-white p-8 rounded-xl shadow-lg border border-slate-200">
                        <h2 class="text-2xl font-bold mb-6 text-primary">Find Person</h2>
                        <form id="findPersonForm" class="space-y-6">
                            <div>
                                <label class="block text-sm font-medium text-slate-600 mb-1.5">Upload Photo</label>
                                <input type="file" name="photo" accept="image/*" required
                                    class="mt-1 block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-primary file:text-white hover:file:bg-secondary transition-colors duration-150 cursor-pointer border border-slate-300 p-2 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                            </div>
                            <button type="submit"
                                class="w-full bg-primary text-white py-3 px-6 rounded-lg hover:bg-secondary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary font-semibold text-base transition-colors duration-150">
                                Find Person
                            </button>
                        </form>

                        <!-- Results Section -->
                        <div id="results" class="mt-8 hidden">
                            <h3 class="text-xl font-semibold mb-4 text-slate-700">Results</h3>
                            <div id="resultsList" class="space-y-5"></div>
                        </div>
                    </div>
                </div>

            </main>
            <%- include('./layouts/end.ejs') %>